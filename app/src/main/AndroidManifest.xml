<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declare permissions before application -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThirdEyeTimer"
        android:usesCleartextTraffic="false">

        <!-- Add AdMob App ID as meta-data -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2722920301958819~5438496026" />

        <!-- New Compose-based Main Activity (Cosmic Zen UI) -->
        <activity
            android:name=".MainActivityCompose"
            android:exported="true"
            android:theme="@style/Theme.ThirdEyeTimer"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Legacy XML-based Main Activity (for sound settings and achievements dialogs) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ThirdEyeTimer"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        
        <activity
            android:name=".SimpleHeartRateActivity"
            android:exported="false"
            android:theme="@style/Theme.ThirdEyeTimer" />
            
        <activity
            android:name=".RelaxationSummaryActivity"
            android:exported="false"
            android:theme="@style/Theme.ThirdEyeTimer" />
        <service
            android:name=".MeditationTimerService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
    </application>

</manifest>