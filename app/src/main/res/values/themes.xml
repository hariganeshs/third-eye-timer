<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.ThirdEyeTimer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/shiva_blue</item>
        <item name="colorPrimaryVariant">@color/shiva_blue</item>
        <item name="colorOnPrimary">@color/shiva_white</item>
        <!-- Secondary color -->
        <item name="colorSecondary">@color/shiva_gold_accent</item>
        <item name="colorSecondaryVariant">@color/shiva_gold_accent</item>
        <item name="colorOnSecondary">@color/shiva_blue</item>
        <!-- Background and text -->
        <item name="android:windowBackground">@color/shiva_ash_gray</item>
        <item name="android:textColor">@color/shiva_white</item>
        <item name="android:editTextColor">@color/shiva_white</item>
        <item name="android:textColorHint">@color/shiva_gold_accent</item>
        <!-- Status bar color -->
        <!-- Status bar color removed for Edge-to-Edge support -->
        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Custom button style -->
        <item name="buttonStyle">@style/ShivaButtonStyle</item>
    </style>

    <!-- Custom button style -->
    <style name="ShivaButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/shiva_blue</item>
        <item name="android:textColor">@color/shiva_white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Sound Selection Button Style -->
    <style name="SoundSelectionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/sound_button_background</item>
        <item name="android:textColor">@color/shiva_text_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/shiva_gold_accent</item>
    </style>

    <!-- Bell Selection Button Style -->
    <style name="BellSelectionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/bell_button_background</item>
        <item name="android:textColor">@color/shiva_text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/shiva_gold_accent</item>
    </style>
</resources>