<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Deep space-like base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000011"
                android:centerColor="#000033"
                android:endColor="#000055"
                android:angle="180"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle cosmic overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#001122"
                android:centerColor="#002244"
                android:endColor="#003366"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Mystical golden glow in center -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFD700"
                android:centerColor="#FFA500"
                android:endColor="#00000000"
                android:gradientRadius="350dp"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.4" />
        </shape>
    </item>
    
    <!-- Mystical purple accent (top right) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#33006699"
                android:endColor="#00000000"
                android:gradientRadius="500dp"
                android:type="radial"
                android:centerX="0.8"
                android:centerY="0.2" />
        </shape>
    </item>
    
    <!-- Deep blue mystical accent (bottom left) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#25002266"
                android:endColor="#00000000"
                android:gradientRadius="400dp"
                android:type="radial"
                android:centerX="0.1"
                android:centerY="0.7" />
        </shape>
    </item>
    
    <!-- Subtle starfield effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#08000000" />
        </shape>
    </item>
    
    <!-- Mystical shimmer effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#08FFFFFF"
                android:endColor="#00000000"
                android:gradientRadius="700dp"
                android:type="radial"
                android:centerX="0.7"
                android:centerY="0.3" />
        </shape>
    </item>
    
</layer-list>