<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shiva_bg"
    android:padding="@dimen/screen_padding"
    tools:context=".MainActivity">

    <!-- Top Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/topAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ad_margin_top"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2722920301958819/3959238290"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Left Column -->
    <LinearLayout
        android:id="@+id/left_column"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/title_margin_top"
        android:layout_marginStart="@dimen/screen_padding"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/center_column"
        app:layout_constraintTop_toBottomOf="@id/topAdView"
        app:layout_constraintBottom_toTopOf="@id/adView">

        <!-- Title -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Meditation Timer"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:textColor="@color/shiva_gold_accent"
            android:fontFamily="serif"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />

        <!-- Time Input -->
        <EditText
            android:id="@+id/time_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="24dp"
            android:ems="6"
            android:hint="Enter time (in minutes)"
            android:inputType="number"
            android:background="@drawable/edit_text_background"
            android:padding="@dimen/input_padding"
            android:textColor="@color/shiva_text_white"
            android:textColorHint="@color/shiva_ash_gray"
            android:textSize="@dimen/input_text_size"
            android:textStyle="bold"
            android:shadowColor="@color/shiva_text_dark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:maxLines="1"
            android:gravity="center" />

        <!-- Sound Settings Button -->
        <Button
            android:id="@+id/button_choose_sound_options"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/secondary_button_background"
            android:text="Sound Settings"
            android:textColor="@color/shiva_text_white"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold"
            android:shadowColor="@color/shiva_text_dark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Achievements Button -->
        <Button
            android:id="@+id/button_achievements"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="8dp"
            android:background="@drawable/secondary_button_background"
            android:text="🏆 Achievements"
            android:textColor="@color/shiva_text_white"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold"
            android:shadowColor="@color/shiva_text_dark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Center Column -->
    <LinearLayout
        android:id="@+id/center_column"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/left_column"
        app:layout_constraintEnd_toStartOf="@id/right_column"
        app:layout_constraintTop_toBottomOf="@id/topAdView"
        app:layout_constraintBottom_toTopOf="@id/adView">

        <!-- Timer Display -->
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="@dimen/timer_text_size"
            android:textStyle="bold"
            android:textColor="@color/shiva_gold_accent"
            android:fontFamily="monospace"
            android:shadowColor="@color/shiva_blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />

        <!-- Divider -->
        <View
            android:id="@+id/timer_divider"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/shiva_gold_accent" />

        <!-- Total Time Display -->
        <TextView
            android:id="@+id/total_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total: 00h 00m"
            android:textSize="@dimen/total_time_text_size"
            android:textColor="@color/shiva_text_white"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:shadowColor="@color/shiva_text_dark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:background="@drawable/text_background"
            android:padding="@dimen/total_time_padding"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />

    </LinearLayout>

    <!-- Right Column -->
    <LinearLayout
        android:id="@+id/right_column"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/screen_padding"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/center_column"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAdView"
        app:layout_constraintBottom_toTopOf="@id/adView">

        <!-- Start/Pause Button -->
        <Button
            android:id="@+id/button_start_pause"
            android:layout_width="match_parent"
            android:layout_height="@dimen/primary_button_height"
            android:text="Start"
            android:textSize="@dimen/primary_button_text_size"
            android:textStyle="bold"
            android:background="@drawable/primary_button_background"
            android:textColor="@color/shiva_text_white"
            android:shadowColor="@color/shiva_text_dark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Reset Timer Button -->
        <Button
            android:id="@+id/button_reset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="16dp"
            android:text="Reset Timer"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold"
            android:background="@drawable/secondary_button_background"
            android:textColor="@color/shiva_text_white"
            android:shadowColor="@color/shiva_text_dark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:visibility="invisible"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Bottom Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ad_margin_bottom"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2722920301958819/2481160193"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>