<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base stunning gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0A1B3A"
                android:centerColor="#1A2B5C"
                android:endColor="#2D4A7A"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Secondary gradient overlay for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A3B6B"
                android:centerColor="#2A4B7B"
                android:endColor="#3A5B8B"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Mystical golden radial gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFD700"
                android:centerColor="#FFA500"
                android:endColor="#00000000"
                android:gradientRadius="400dp"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.3" />
        </shape>
    </item>
    
    <!-- Subtle mystical purple accent -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#20006699"
                android:endColor="#00000000"
                android:gradientRadius="600dp"
                android:type="radial"
                android:centerX="0.2"
                android:centerY="0.8" />
        </shape>
    </item>
    
    <!-- Another mystical accent -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#1500AA88"
                android:endColor="#00000000"
                android:gradientRadius="500dp"
                android:type="radial"
                android:centerX="0.8"
                android:centerY="0.1" />
        </shape>
    </item>
    
    <!-- Subtle texture overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
        </shape>
    </item>
    
</layer-list>