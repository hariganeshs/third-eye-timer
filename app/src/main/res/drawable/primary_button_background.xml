<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/shiva_blue"
                android:centerColor="@color/shiva_deep_blue"
                android:endColor="#001122"
                android:angle="135" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Subtle golden glow overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40FFD700"
                android:endColor="#00000000"
                android:angle="45" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Enhanced golden border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="@color/shiva_gold_accent" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
</layer-list> 