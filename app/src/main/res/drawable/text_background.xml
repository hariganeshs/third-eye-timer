<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base semi-transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shiva_semi_transparent_black" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Subtle gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40FFD700"
                android:endColor="#00000000"
                android:angle="45" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Golden border with glow effect -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/shiva_gold_accent" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
</layer-list> 