<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow/Glow effect -->
    <item android:left="2dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#331A1A1A" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <!-- Enhanced gradient with multiple colors -->
            <gradient
                android:startColor="#FFF8E1"
                android:centerColor="#FFD700"
                android:endColor="#FFA000"
                android:angle="90"
                android:type="linear" />

            <!-- Rounded corners -->
            <corners android:radius="16dp" />

            <!-- Enhanced border -->
            <stroke
                android:width="3dp"
                android:color="#FFD700" />

            <!-- Subtle inner padding -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <!-- Highlight overlay for extra visual pop -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
