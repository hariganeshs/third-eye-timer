<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shiva_bg"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Top Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/topAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2722920301958819/3959238290"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Meditation Timer"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/shiva_gold_accent"
        android:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAdView" />

    <!-- Time Input -->
    <EditText
        android:id="@+id/time_edit_text"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Enter time (in minutes)"
        android:inputType="number"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="@color/shiva_text_white"
        android:textColorHint="@color/shiva_ash_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:shadowColor="@color/shiva_text_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title" />

    <!-- Timer Display -->
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="00:00"
        android:textSize="72sp"
        android:textStyle="bold"
        android:textColor="@color/shiva_gold_accent"
        android:fontFamily="monospace"
        android:shadowColor="@color/shiva_blue"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_edit_text" />

    <!-- Divider -->
    <View
        android:id="@+id/timer_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/shiva_gold_accent"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Total Time Display -->
    <TextView
        android:id="@+id/total_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total: 00h 00m"
        android:textSize="20sp"
        android:textColor="@color/shiva_text_white"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:shadowColor="@color/shiva_text_dark"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:background="@drawable/text_background"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_divider" />

    <!-- Sound Settings Button -->
    <Button
        android:id="@+id/button_choose_sound_options"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/secondary_button_background"
        android:text="Sound Settings"
        android:textColor="@color/shiva_text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:shadowColor="@color/shiva_text_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_time_text" />

    <!-- Achievements Button -->
    <Button
        android:id="@+id/button_achievements"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/secondary_button_background"
        android:text="ðŸ† Achievements"
        android:textColor="@color/shiva_text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:shadowColor="@color/shiva_text_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_choose_sound_options" />

    <!-- Start/Pause Button -->
    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:text="Start"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/primary_button_background"
        android:textColor="@color/shiva_text_white"
        android:shadowColor="@color/shiva_text_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_achievements" />

    <!-- Reset Timer Button -->
    <Button
        android:id="@+id/button_reset"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Reset Timer"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/secondary_button_background"
        android:textColor="@color/shiva_text_white"
        android:shadowColor="@color/shiva_text_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_pause" />

    <!-- Reset Total Time Button -->
    <Button
        android:id="@+id/button_reset_total_time"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/secondary_button_background"
        android:text="Reset Total Time"
        android:textColor="@color/shiva_text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:shadowColor="@color/shiva_text_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_reset"
        app:layout_constraintBottom_toTopOf="@id/adView" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2722920301958819/2481160193"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>