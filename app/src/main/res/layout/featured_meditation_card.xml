<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="140dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/shiva_semi_transparent_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/featured_meditation_background"
        android:padding="16dp"
        android:gravity="center">

        <!-- Large Icon -->
        <TextView
            android:id="@+id/featured_meditation_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="🌟"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/featured_meditation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breath Focus"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_text_white"
            android:fontFamily="serif"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/featured_meditation_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfect for beginners"
            android:textSize="11sp"
            android:textColor="@color/shiva_ash_gray"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Play Button Overlay -->
        <TextView
            android:id="@+id/featured_play_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="▶️"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/featured_play_button_background"
            android:layout_marginTop="8dp"
            android:elevation="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
