<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="160dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/shiva_semi_transparent_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/featured_meditation_background"
        android:padding="12dp"
        android:gravity="center">

        <!-- Large Icon -->
        <TextView
            android:id="@+id/featured_meditation_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸŒŸ"
            android:textSize="28sp"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/featured_meditation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breath Focus"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_text_white"
            android:fontFamily="serif"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/featured_meditation_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfect for beginners"
            android:textSize="10sp"
            android:textColor="@color/shiva_ash_gray"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Play Button -->
        <TextView
            android:id="@+id/featured_play_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="â–¶ï¸"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/featured_play_button_background"
            android:elevation="4dp"
            android:layout_gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
