<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sacred Soundscapes"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_gold_accent"
            android:fontFamily="serif"
            android:gravity="center" />

        <Button
            android:id="@+id/button_close_bg_sound_dialog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="âœ•"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_text_white"
            android:background="@drawable/close_button_background"
            android:gravity="center" />
    </LinearLayout>

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your sacred sound companion for meditation"
        android:textSize="16sp"
        android:textColor="@color/shiva_ash_gray"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Sound Grid Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:id="@+id/sound_grid_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Ambient Sounds Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Looping Ambient Sounds"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/shiva_gold_accent"
                android:fontFamily="serif"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/ambient_sounds_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <!-- Guided Meditations Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guided Meditations &amp; Nature"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/shiva_gold_accent"
                android:fontFamily="serif"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/guided_sounds_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Current Selection Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/sound_section_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Currently Selected:"
            android:textSize="16sp"
            android:textColor="@color/shiva_ash_gray"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/text_current_bg_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete Silence"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_gold_accent"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button_stop_preview"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Stop Preview"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_text_white"
            android:background="@drawable/secondary_button_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_confirm_bg_sound"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Confirm Selection"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_text_white"
            android:background="@drawable/primary_button_background"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
