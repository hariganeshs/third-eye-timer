<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sacred Bell Tones"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_gold_accent"
            android:fontFamily="serif"
            android:gravity="center" />

        <Button
            android:id="@+id/button_close_bell_sound_dialog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="âœ•"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_text_white"
            android:background="@drawable/close_button_background"
            android:gravity="center" />
    </LinearLayout>

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your sacred bell to signal the end of meditation"
        android:textSize="16sp"
        android:textColor="@color/shiva_ash_gray"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Bell Grid Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/bell_grid_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Bell 1-3 Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_bell_1"
                    style="@style/BellSelectionButton"
                    android:text="Ding"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_bell_2"
                    style="@style/BellSelectionButton"
                    android:text="Dong"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_bell_3"
                    style="@style/BellSelectionButton"
                    android:text="Ting"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Bell 4-6 Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_bell_4"
                    style="@style/BellSelectionButton"
                    android:text="Ring"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_bell_5"
                    style="@style/BellSelectionButton"
                    android:text="Chime"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_bell_6"
                    style="@style/BellSelectionButton"
                    android:text="Bong"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Current Selection Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/sound_section_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Currently Selected:"
            android:textSize="16sp"
            android:textColor="@color/shiva_ash_gray"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/text_current_bell_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bell 1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/shiva_gold_accent"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>


</LinearLayout>
