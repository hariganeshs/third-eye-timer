<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/shiva_semi_transparent_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/meditation_item_background">

        <!-- Meditation Icon/Emoji -->
        <TextView
            android:id="@+id/meditation_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="🧘‍♀️"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/meditation_icon_background"
            android:layout_marginEnd="16dp"
            android:elevation="2dp" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Meditation Title -->
            <TextView
                android:id="@+id/meditation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mindful Breathing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/shiva_text_white"
                android:fontFamily="serif"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Meditation Description/Category -->
            <TextView
                android:id="@+id/meditation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Focus on your breath to calm the mind"
                android:textSize="12sp"
                android:textColor="@color/shiva_ash_gray"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Difficulty Tag (Optional) -->
            <TextView
                android:id="@+id/meditation_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textSize="10sp"
                android:textColor="@color/shiva_text_white"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/difficulty_tag_background"
                android:padding="4dp"
                android:layout_marginTop="6dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Selection Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp">

            <!-- Play Button -->
            <TextView
                android:id="@+id/play_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="▶️"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/play_button_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="3dp" />

            <!-- Selected Indicator -->
            <TextView
                android:id="@+id/selected_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="✓"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/shiva_text_white"
                android:gravity="center"
                android:background="@drawable/selected_indicator_background"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
