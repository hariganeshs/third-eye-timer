<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/settings_dialog_background"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âš™ï¸ Settings"
        android:textColor="@color/shiva_gold_accent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bell Sound Option -->
    <LinearLayout
        android:id="@+id/bell_sound_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/settings_option_background"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/settings_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_bell"
            android:tint="@color/shiva_gold_accent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”” Bell Sound"
            android:textColor="@color/shiva_text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/shiva_text_white" />

    </LinearLayout>

    <!-- Background Sound Option -->
    <LinearLayout
        android:id="@+id/background_sound_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/settings_option_background"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/bell_sound_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_music"
            android:tint="@color/shiva_gold_accent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŽµ Background Sound"
            android:textColor="@color/shiva_text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/shiva_text_white" />

    </LinearLayout>

    <!-- Guided Meditation Option -->
    <LinearLayout
        android:id="@+id/guided_meditation_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/settings_option_background"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/background_sound_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_music"
            android:tint="@color/shiva_gold_accent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ§˜ Guided Meditation"
            android:textColor="@color/shiva_text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/shiva_text_white" />

    </LinearLayout>

    <!-- Heart Rate Measurement Toggle -->
    <LinearLayout
        android:id="@+id/heart_rate_toggle_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/settings_option_background"
        app:layout_constraintTop_toBottomOf="@id/guided_meditation_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart"
            android:tint="@color/shiva_gold_accent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“· Heart Rate Measurement"
            android:textColor="@color/shiva_text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/heart_rate_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:thumbTint="@color/shiva_gold_accent"
            android:trackTint="@color/shiva_text_white" />

    </LinearLayout>

    <!-- Dark Mode Toggle -->
    <LinearLayout
        android:id="@+id/dark_mode_toggle_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/settings_option_background"
        app:layout_constraintTop_toBottomOf="@id/heart_rate_toggle_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_achievement_trophy"
            android:tint="@color/shiva_gold_accent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŒ™ Dark Mode"
            android:textColor="@color/shiva_text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/dark_mode_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:thumbTint="@color/shiva_gold_accent"
            android:trackTint="@color/shiva_text_white" />

    </LinearLayout>

    <!-- Reset Total Time Option -->
    <LinearLayout
        android:id="@+id/reset_total_time_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/settings_option_background"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/dark_mode_toggle_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_reset"
            android:tint="@color/shiva_gold_accent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”„ Reset Total Time"
            android:textColor="@color/shiva_text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/shiva_text_white" />

    </LinearLayout>

    <!-- Close Button -->
    <Button
        android:id="@+id/button_close_settings"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Close"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/primary_button_background"
        android:textColor="@color/shiva_text_white"
        app:layout_constraintTop_toBottomOf="@id/reset_total_time_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 